env\Scripts\activate: requirements.txt
	python -m venv env
	.\env\Scripts\pip install -r requirements.txt

build: romcomPrep.py
	.\env\Scripts\python romcomPrep.py
	
test: romcomSQL.py test_romcom.py env/bin/activate
	.\env\Scripts\python romcomSQL.py
	.\env\Scripts\python -m unittest test_romcom -v

run: env\Scripts\activate
	.\env\Scripts\python romcom.py

refresh: romcomPrep.py
	.\env\Scripts\python romcomPrep.py

clean: *.pkl.gz *.tsv.gz *.tsv __pycache__
	del *.pkl.gz
	del *.tsv.gz
	del *.tsv
	rmdir -f __pycache__

